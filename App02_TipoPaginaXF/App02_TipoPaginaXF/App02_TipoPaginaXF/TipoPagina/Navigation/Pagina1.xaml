             x:Class="App02_TipoPaginaXF.TipoPagina.Navigation.Pagina1"
             Title="Título da Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="A" Icon="pig.png"/>
        <ToolbarItem Text="B" Icon="gears.png"/>
        <ToolbarItem Text="C" Icon="puzzle.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou a Página 1 !"
